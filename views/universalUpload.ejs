<div class="container my-4">
    <form enctype="multipart/form-data">
        <div class="file-loading">
            <input id="file-4" type="file" class="file" multiple data-preview-file-type="any" data-upload-url="/upload/store" data-theme="fas">
        </div>
    </form>
