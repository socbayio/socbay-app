	<script src="/js/vertical-responsive-menu.min.js"></script>
	<script src="/owlcarousel/owl.carousel.js"></script>
	<script src="/js/custom.js"></script>
	<script src="/js/night-mode.js"></script>
	

	<script>
		$("#filesupload").fileinput({
			uploadUrl: "/uploadvideo/store",
			theme: 'fas',
			uploadAsync: false,
			maxFileSize: 495*1024,
			minFileCount: 1,
			maxFileCount: 2,
			allowedFileExtensions: ["jpg", "png", "gif", "jpeg", "mp4", "webm", "flv", "avi"],
			browseClass: "btn btn-primary btn-block",
			showCaption: false,
			showRemove: false,
			showUpload: false,
			uploadExtraData: function() {
            	return {
					title: document.getElementById("title").value,
					tag: document.getElementById("tag").value,
					desc: document.getElementById("desc").value,
					lang: document.getElementById("lang").value
				}
        	}
		}).on('fileuploaded', function(event, databack) {
			// var CIDback = document.getElementById('CIDback');
			// CIDback.placeholder = databack.response.CID;
		});
		$(".btn-upload-3").on("click", function() {
			var filesToUpload = $('#filesupload').fileinput('getFileList');
			var validatedVideo = 0;
			var validatedImage = 0;
			var wrongFile = false;
			for (var count = 0; count < filesToUpload.length; count++){
				if (filesToUpload[count].type.includes("video")){
					validatedVideo++;
				}
				if (filesToUpload[count].type.includes("image")){
					validatedImage++;
				}
				// if (!(filesToUpload[count].type.includes("video")||filesToUpload[count].type.includes("image"))){
				// 	wrongFile = true;
				// }
			}
			if ((validatedVideo == 1)&&(validatedImage == 1)&&(document.getElementById("title").value)/* (!wrongFile) */){
				$("#filesupload").fileinput('upload');
			} else {
				//alert
			}
        });
	</script>
</body>
