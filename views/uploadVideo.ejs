	<script>
		function validURL(str) {
			var pattern = new RegExp('^(https?:\\/\\/)?'+ // protocol
				'((([a-z\\d]([a-z\\d-]*[a-z\\d])*)\\.)+[a-z]{2,}|'+ // domain name
				'((\\d{1,3}\\.){3}\\d{1,3}))'+ // OR ip (v4) address
				'(\\:\\d+)?(\\/[-a-z\\d%_.~+]*)*'+ // port and path
				'(\\?[;&a-z\\d%_.~+=-]*)?'+ // query string
				'(\\#[-a-z\\d_]*)?$','i'); // fragment locator
			return !!pattern.test(str);
		}

		$("#filesupload").fileinput({
			uploadUrl: "/uploadvideo/store",
			theme: 'fas',
			uploadAsync: false,
			maxFileSize: 495*1024,
			minFileCount: 1,
			maxFileCount: 2,
			allowedFileExtensions: ["jpg", "png", "gif", "jpeg", "mp4", "webm", "flv", "avi"],
			browseClass: "btn btn-primary btn-block",
			showCaption: false,
			showRemove: false,
			showUpload: false,
			uploadExtraData: function() {
            	return {
					title: document.getElementById("title").value,
					tag: document.getElementById("tag").value,
					desc: document.getElementById("desc").value,
					lang: document.getElementById("lang").value,
					ref: document.getElementById("reference").value
				}
        	}
		}).on('fileuploaded', function(event, databack) {
			// var CIDback = document.getElementById('CIDback');
			// CIDback.placeholder = databack.response.CID;
		});
		$(".btn-upload-3").on("click", function() {
			var filesToUpload = $('#filesupload').fileinput('getFileList');
			var validatedVideo = 0;
			var validatedImage = 0;
			var wrongFile = false;
			var validatedUrl = true;
			for (var count = 0; count < filesToUpload.length; count++){
				if (filesToUpload[count].type.includes("video")){
					validatedVideo++;
				}
				if (filesToUpload[count].type.includes("image")){
					validatedImage++;
				}
				// if (!(filesToUpload[count].type.includes("video")||filesToUpload[count].type.includes("image"))){
				// 	wrongFile = true;
				// }
			}
			if (validatedVideo == 0) {
				document.getElementById("videoallert").innerHTML = "<%=t('uploadvideo.videoisrequired')%>";
			} else {
				document.getElementById("videoallert").innerHTML = "";
			}
			if (validatedImage == 0) {
				document.getElementById("thumballert").innerHTML = "<%=t('uploadvideo.thumbnailisrequired')%>";
			} else {
				document.getElementById("thumballert").innerHTML = "";
			}
			
			if (!document.getElementById("title").value) {
				document.getElementById("titleallert").innerHTML = "<%=t('uploadvideo.titleisrequired')%>"
			} else {
				document.getElementById("titleallert").innerHTML = "";
			}
			if (document.getElementById("reference").value) {
				if (!validURL(document.getElementById("reference").value)){
					validatedUrl = false;
					document.getElementById("urlallert").innerHTML = "<%=t('uploadvideo.plsenteracorrectURL')%>"
				}
			} else {
				document.getElementById("urlallert").innerHTML = "";
			}
			
			if ((validatedVideo == 1)&&(validatedImage == 1)&&(document.getElementById("title").value)&&validatedUrl){
				$("#filesupload").fileinput('upload');
			}
        });
	</script>
