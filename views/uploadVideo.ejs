<body>

	<%- include("header"); -%>		
	
	<%- include("leftSideBar"); -%>	
	<!-- Body Start -->
	<div class="wrapper">
		<div class="sa4d25">
			<div class="container-fluid">			
				<div class="row justify-content-md-center">
					<div class="col-lg-8 col-md-10">
						<div class="section3125 stream_tabs">
						
							<div class="tab-content" id="myTabContent">
								<div class="tab-pane fade show active" id="add-straming" role="tabpanel">
									<div class="add_stream_content">
										<h4 class="strm_title">Upload Video</h4>
										<form enctype="multipart/form-data">
											<div class="group-form">
												<div style="font-weight: 500; margin-bottom: 10px; margin-top: 30px;">Video & Thumbnail</div>
												<input id="filesupload" type="file" class="file" multiple data-preview-file-type="any" data-theme="fas">
											</div>
										</form>
											<div class="group-form">
												<label>Title</label>
												<input name="title" class="_dlor1" type="text" placeholder="" value="" id="title">
											</div>

											<div class="group-form">
												<label>Tag</label>
												<select class="ui hj145 dropdown cntry152 prompt srch_explore" name='tag' id="tag">
													<option value="notselected">Select Category</option>
													<option value="gaming">Gaming</option>
													<option value="tech">Tech</option>
													<option value="finance">Finance 2.0</option>
													<option value="cryptonews">Crypto News</option>
													<option value="news">News</option>
													<option value="lifestyle">Lifestyle</option>
													<option value="healthandfitness">Health & Fitness</option>
													<option value="music">Music</option>
												</select>
											</div>

											<div class="group-form">
												<label>Language</label>
												<select class="ui hj145 dropdown cntry152 prompt srch_explore" name='lang' id="lang">
													<option value="en">English</option>
													<option value="vi">Vietnamese</option>
												</select>
											</div>

											<div class="ui search focus mt-15">
												<label><b>Description</b></label>
												<div class="ui form swdh30">
													<div class="field">
														<textarea rows="5" name="description" id="desc" placeholder="Short description"></textarea>
													</div>
												</div>
											</div>

											<button class="_145d1 btn-upload-3"><i class='uil uil-video'></i>Upload</button>
										
									</div>
								</div>
							
							</div>							
						</div>							
					</div>								
				</div>
			</div>
		</div>

	</div>
