<!-- Header Start -->
<header class="header clearfix">
    <button type="button" id="toggleMenu" class="toggle_menu">
        <i class='uil uil-bars'></i>
    </button>
    <button id="collapse_menu" class="collapse_menu">
        <i class="uil uil-bars collapse_menu--icon "></i>
        <span class="collapse_menu--label"></span>
    </button>
    <div class="main_logo" id="logo">
        <a href="/"><img src="/images/logo/v3/socbay-135x32.svg" alt=""></a>
        <a href="/"><img class="logo-inverse" src="/images/logo/v3/socbay-135x32-inverse.svg" alt=""></a>
    </div>
    <div class="top-category">
        <div class="ui compact menu cate-dpdwn">
            <div class="ui simple dropdown item">
                <a href="#" class="option_links p-0" title="categories"><i class="uil uil-apps"></i></a>
                <div class="menu dropdown_category5">
                    <a href="/tag/gaming" class="item channel_item">
                        <%=t('categories.gaming')%>
                    </a>
                    <a href="/tag/relax" class="item channel_item">
                        <%=t('categories.relax')%>
                    </a>
                    <a href="/tag/tech" class="item channel_item">
                        <%=t('categories.tech')%>
                    </a>
                    <a href="/tag/finance" class="item channel_item">
                        <%=t('categories.finance')%>
                    </a>
                    <a href="/tag/cryptonews" class="item channel_item">
                        <%=t('categories.cryptonews')%>
                    </a>
                    <a href="/tag/news" class="item channel_item">
                        <%=t('categories.news')%>
                    </a>
                    <a href="/tag/lifestyle" class="item channel_item">
                        <%=t('categories.lifestyle')%>
                    </a>
                    <a href="/tag/healthandfitness" class="item channel_item">
                        <%=t('categories.healthandfitness')%>
                    </a>
                    <a href="/tag/music" class="item channel_item">
                        <%=t('categories.music')%>
                    </a>

                </div>
            </div>
        </div>
    </div>
    <div class="search120">
        <form action="/search" method="GET">
            <div class="ui search">
                <div class="ui left icon input swdh10">
                    <input name="keyword" class="prompt srch10" type="text" placeholder="Search.." autocomplete="off">
                    <i class='uil uil-search-alt icon icon1'></i>
                </div>
            </div>
        </form>
    </div>
    <div class="header_right">
        <ul>
            <li class="ui dropdown">
                <a href="#" class="option_links" title="Messages"><i class='uil uil-wallet'></i><span
                        class="noti_count d-none" id="walletnumber"></span></a>
                <div class="menu dropdown_ms">
                    <a href="#" class="channel_my item d-none">
                    </a>
                    <a class="vbm_btn" id="connectWalletButton">Connect <i class='uil uil-arrow-right'></i></a>
                </div>
            </li>
            <% if(loggedIn) { %>
                <li class="ui dropdown">
                    <a href="#" class="opts_account" title="Account">
                        <img src="https://ipfs.io/ipfs/<%=userInfo.profilePicture%>" alt="">
                    </a>
                    <div class="menu dropdown_account">
                        <div class="channel_my">
                            <div class="profile_link">
                                <img src="https://ipfs.io/ipfs/<%= userInfo.profilePicture %>" alt="">
                                <div class="pd_content">
                                    <div class="rhte85">
                                        <h6>
                                            <%= userInfo.username %>
                                        </h6>
                                    </div>
                                    <span>
                                        <%= userInfo.emailaddress %>
                                    </span>
                                </div>
                            </div>
                            <a href="/myinfo" class="dp_link_12">
                                <%=t('header.viewprofile')%>
                            </a>
                        </div>
                        <div class="night_mode_switch__btn">
                            <a href="#" id="night-mode" class="btn-night-mode" style="padding-right: 60px;">
                                <i class="uil uil-moon"></i>
                                <%=t('header.nightmode')%>
                                    <span class="btn-night-mode-switch">
                                        <span class="uk-switch-button"></span>
                                    </span>
                            </a>
                        </div>
                        <a href="/myinfo" class="item channel_item">
                            <%=t('header.myinfo')%>
                        </a>
                        <a href="/uploadvideo" class="item channel_item">
                            <%=t('header.uploadvideo')%>
                        </a>
                        <a href="/uploadhistory" class="item channel_item">
                            <%=t('header.uploadhistory')%>
                        </a>
                        <a href="/logout" class="item channel_item">
                            <%=t('header.signout')%>
                        </a>

                    </div>
                </li>

                <% } %>

                    <% if(!loggedIn) { %>
                        <li>
                            <a href="/login" class="upload_btn" title="Create New Course"><i class='uil uil-user'></i>
                                <%=t('header.signin')%>
                            </a>
                        </li>
                        <% } %>
        </ul>
    </div>
</header>
<!-- Header End -->